    <ul>
    <% @step.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for ([@recipe, @step]), html: {class: "form-inline"} do |f| %>

<div class="form-group">
  <%= f.label :order %>
  <%= f.number_field :order, required: true %>
</div>

<div class="form-group">
  <%= f.label :directions %>
  <%= f.text_area :directions, class: "form-control", required: true %>
</div>

<%= f.submit class: "btn btn-primary"%>

<% end %>
