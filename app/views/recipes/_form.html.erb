

<%= form_for @recipe do |f| %>

<div class="">
  <%= f.label :title %>
  <%= f.text_field :title %>
</div>

<div class="">
  <%= f.label :description %>
  <%= f.text_field :description %>
</div>

<div class="">
  <%= f.label :cook_time %>
  <%= f.text_field :cook_time %>
</div>

<div class="">
  <%= f.submit class: "btn btn-primary"%>
</div>

<% end %>
