

<%= form_for @recipe, html: {class: "form-inline"}  do |f| %>

<div class="form-group">
  <%= f.label :title %>
  <%= f.text_field :title %>
</div>

<div class="form-group">
  <%= f.label :description %>
  <%= f.text_area :description, class: "form-control" %>
</div>

<div class="form-group">
  <%= f.label :cook_time %>
  <%= f.text_field :cook_time %>
</div>

<div class="form-group">
  <%= f.submit class: "btn btn-primary"%>
</div>

<% end %>
